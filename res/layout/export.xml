<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
    android:layout_width="match_parent"
    android:background="#e9e9e9"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="#ef4a4c"
        android:src="@drawable/resync" />

    <WebView
        android:id="@+id/webView1"
        android:layout_width="200dp"
        android:background="#e9e9e9"
        android:layout_height="18dp"
        android:layout_below="@+id/imageView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="149dp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        android:text="Resycing . . ."
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#ef4a4c" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/webView1"
        android:layout_alignBottom="@+id/webView1"
        android:layout_alignLeft="@+id/webView1"
        android:layout_alignRight="@+id/webView1"
        android:background="@drawable/edittext_bg2"
        android:textColor="#999999"
        android:text="Sync Back To Phone" />

    <com.google.ads.AdView
        android:id="@+id/adView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-8429573372209071/7400646147" >
    </com.google.ads.AdView>

</RelativeLayout>